<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_save_file"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="80dp"
        android:text="SharedPreferences存储测试"
        android:textAllCaps="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_read_file"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="file存储测试"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="@+id/btn_save_file"
        app:layout_constraintHorizontal_bias="0.436"
        app:layout_constraintStart_toStartOf="@+id/btn_save_file"
        app:layout_constraintTop_toBottomOf="@+id/btn_save_file" />

    <Button
        android:id="@+id/btn_open_sqlite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Sqlite存储测试"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="@+id/btn_read_file"
        app:layout_constraintStart_toStartOf="@+id/btn_read_file"
        app:layout_constraintTop_toBottomOf="@+id/btn_read_file" />

</androidx.constraintlayout.widget.ConstraintLayout>